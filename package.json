{
  "name": "safesign",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun scripts/kill-on-port.ts 3000 && bun scripts/kill-on-port.ts 3001 && concurrently \"bun run server:dev\" \"bun run client:dev\"",
    "server:dev": "bun scripts/kill-on-port.ts 3001 && bun --watch src/server/index.ts",
    "client:dev": "bun scripts/kill-on-port.ts 3000 && vite",
    "build": "vite build",
    "server": "bun scripts/kill-on-port.ts 3001 && bun run src/server/index.ts",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "@preact/signals": "^2.2.1",
    "@wagmi/connectors": "^5.9.1",
    "@wagmi/core": "^2.18.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "pdf-lib": "^1.17.1",
    "preact": "^10.27.0",
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest",
    "tailwind-merge": "^2.6.0",
    "viem": "^2.33.2",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@preact/preset-vite": "^2.10.2",
    "@types/bun": "^1.2.19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  },
  "overrides": {
    "react": "npm:@preact/compat@latest",
    "react-dom": "npm:@preact/compat@latest"
  }
}
